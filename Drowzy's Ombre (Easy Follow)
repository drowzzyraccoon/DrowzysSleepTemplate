/* =========================================================
   ü¶ù 1) CUSTOMIZE VARIABLES HERE ü¶ù
   ---------------------------------------------------------
   Change THESE to customize the whole theme safely.
========================================================= */
.profile-page{
  /* ---- A) THEME COLORS ---- */
  --COLOR-1:  rgba(186,182,224,.70);   /* primary provided color */
  --COLOR-2:  rgba(220,212,223,.55);   /* middle provided color */
  --COLOR-3:  rgba(255,242,222,.70);   /* accent provided color */

  /* Card backgrounds (how ‚Äúmilky‚Äù the glass feels) */
  --CREAM-TOP:    rgba(255,250,245,.92);
  --CREAM-BOTTOM: rgba(255,255,255,.60);

  /* Borders (more alpha = more outline) */
  --BORDER:  rgba(186,182,224,.40);
  --BORDER2: rgba(255,242,222,.60);
  
  /* Text */
  --INK:   #000000;
  --MUTED: rgba(0,0,0,.70);

  /* ---- B) ROUNDNESS + SPACING ----
     Bigger numbers = rounder / puffier */
  --R-LG: 20px;   /* card corners */
  --R-MD: 16px;   /* input/button corners */
  --R-SM: 12px;   /* small elements */

  --CARD-PAD: 12px; /* IMPORTANT for header alignment */
  --BLUR: 10px;     /* glass blur (0 = no blur) */

  /* ---- C) GLOW CONTROL ----
     Turn glow OFF by setting --GLOW-ON to 0. */
  --GLOW-ON: 1;          /* 1 = ON, 0 = OFF */
  --GLOW-STRENGTH: 28px; /* bigger = glowier */
  --GLOW-ALPHA: .75;     /* 0.10 subtle, 0.30 strong */

  /* ---- D) SHADOWS (depth) ---- */
  --SHADOW:  0 14px 34px rgba(186,182,224,.15);
  --SHADOW2: 0 8px  18px rgba(0,0,0,.10);

  font-family: 'Quicksand', 'Nunito', 'Comic Sans MS', 'Varela Round', ui-rounded, cursive, sans-serif !important;
  font-weight: bold !important;
  color: var(--INK) !important;
  /* background is NOT set here, so your photo stays */
  padding: 18px 12px;
}

/* Force ALL text inside panels to be black */
.profile-page .panel,
.profile-page .module,
.profile-page .box,
.profile-page .card,
.profile-page [class*="panel"],
.profile-page [class*="card"],
.profile-page .panel *,
.profile-page .module *,
.profile-page .box *,
.profile-page .card *,
.profile-page [class*="panel"] *,
.profile-page [class*="card"] * {
  color: #000000 !important;
}

/* -------------------------
   Panel hover (lift + glow)
   - subtle transform and accent glow on hover
*/
.panel:hover,
.module:hover,
.box:hover,
.card:hover {
  /* lift and tiny scale for hover feedback */
  transform: translateY(-6px) scale(1.008) !important;
  /* halo + deeper shadow for hover state */
  box-shadow:
    0 0 44px rgba(186,182,224,0.48),
    0 26px 60px rgba(150,146,190,0.36) !important;
}

/* pseudo-element used to add a soft white halo behind panels on hover */
.panel::after,
.module::after,
.box::after {
  /* empty content (visual only) */
  content: "";
  /* absolute positioning within the panel */
  position: absolute;
  /* don't block pointer events */
  pointer-events: none;
  /* stretch to fill the host panel */
  inset: 0;
  /* copy the panel's corner rounding */
  border-radius: inherit;
  /* start hidden */
  opacity: 0;
  /* animate opacity and blur */
  transition: opacity .18s ease, filter .18s ease;
  /* soft white halo */
  box-shadow: 0 0 60px 16px rgba(255,255,255,0.06);
  /* behind normal content */
  z-index: 0;
}
/* show the halo on hover */
.panel:hover::after,
.module:hover::after,
.box:hover::after { 
  opacity: 1; 
  filter: blur(6px);
}

/* ensure direct children sit above the pseudo-element halo */
.panel > *,
.module > *,
.box > * { 
  position: relative;
  z-index: 1; 
}

/* =========================================================
   ü¶ù 2) DO NOT TOUCH THIS SECTION (Structure) ü¶ù
   ---------------------------------------------------------
   This section makes the layout behave and keeps headers flush.
========================================================= */
.profile-page, .profile-page * { box-sizing: border-box; }
.profile-page { overflow-x: hidden; }

/* =========================================================
   ü¶ù 3) LINKS ü¶ù
   ---------------------------------------------------------
