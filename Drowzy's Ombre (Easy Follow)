.profile-page :is(
  .card-header, .panel-heading, .panel-header,
  [class*="header"], [class*="Header"],
  [class*="titlebar"], [class*="Titlebar"]
){
  /* This fixes the ‚Äúheader inset‚Äù issue by canceling card padding */
  margin: calc(var(--CARD-PAD) * -1)
          calc(var(--CARD-PAD) * -1)
          var(--CARD-PAD)
          calc(var(--CARD-PAD) * -1) !important;
