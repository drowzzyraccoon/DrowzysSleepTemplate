@keyframes moveGradient {
  0%, 100% { background-position: 0% 0%; }
  50% { background-position: 100% 100%; }
}
@-webkit-keyframes moveGradient {
  0%, 100% { background-position: 0% 0%; }
  50% { background-position: 100% 100%; }
}

@keyframes breatheGlow {
