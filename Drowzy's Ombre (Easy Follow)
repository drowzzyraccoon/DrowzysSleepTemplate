========================================================= */
.profile-page a, .profile-page a:visited{
  color: rgba(150, 146, 190, .95) !important;
  text-decoration: none !important;
}
.profile-page a:hover{
  color: rgba(120, 116, 160, .95) !important;
  text-shadow: 0 0 10px rgba(186,182,224,.65);
}

/* =========================================================
   ü¶ù 4) CARDS (Glass Panels) ü¶ù
   ---------------------------------------------------------
   These are the big boxes around everything.
========================================================= */
.profile-page :is(
  section, article, aside,
  .card, .panel, .box,
  [class*="card"], [class*="Card"],
  [class*="panel"], [class*="Panel"],
  [class*="module"], [class*="Module"],
  [class*="widget"], [class*="Widget"]
){
  background-image: linear-gradient(180deg, var(--CREAM-TOP), var(--CREAM-BOTTOM)) !important;
  background-size: 200% 200% !important;
  
  /* Added breatheGlow alongside moveGradient to handle shadows & gradient moving simultaneously */
  animation: moveGradient 6s ease infinite, breatheGlow 4s ease-in-out infinite !important;
  -webkit-animation: moveGradient 6s ease infinite, breatheGlow 4s ease-in-out infinite !important;
  
  border: 1px solid var(--BORDER2) !important;
  border-radius: var(--R-LG) !important;
  /* glass */
  backdrop-filter: blur(var(--BLUR));
  -webkit-backdrop-filter: blur(var(--BLUR));

  /* spacing + header alignment math */
  padding: var(--CARD-PAD) !important;
  overflow: hidden;
}
/* seam killer */
.profile-page :is(
  section, article, aside,
  .card, .panel, .box,
  [class*="card"], [class*="Card"],
  [class*="panel"], [class*="Panel"],
  [class*="module"], [class*="Module"],
  [class*="widget"], [class*="Widget"]
){
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
}

/* =========================================================
   ü¶ù 5) HEADER BARS ü¶ù
